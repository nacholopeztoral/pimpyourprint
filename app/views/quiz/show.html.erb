<div class="banner-quiz">

  <div class=" quiz container">
    <div class="questions">


      <h1>Eco quiz</h1>


      <%= form_tag quiz_results_path, options = { method: "get" } do  %>
      <div class="question">

        <div class="answer">
          <label for="Transport" class="quiz-title">Way of moving:</label>
          <% [ 'Bike', 'My feet', 'Gas vehicle', 'Public Transport', 'My private jet' ].each do |transport| %>
          <label class="option">
            <%= radio_button_tag 'transport', transport, @transport == transport, class: "next" %>
          <%= transport.humanize %>
          </label>
          <% end %>
        </div>
      </div>

      <div class="question flight">
        <div class="answer">
          <label for="Flight" class="quiz-title">Average amount of <br> hours flying per year?</label>
          <% [ 'I do not fly', 'Less than 10 hours', 'Between 10-40', 'More than 50 '].each do |flight| %>
          <label class="option">
            <%= radio_button_tag 'flight', flight, @flight == flight, class: "next" %>
            <%= flight.humanize %>
          </label>
          <% end %>
        </div>

      </div>

      <div class="question">
        <div class="answer">
          <label for="Smoker" class="quiz-title">Do you smoke?</label>
          <% [  'Always', 'Sometimes', 'Never'].each do |smoker| %>
          <label class="option">
            <%= radio_button_tag 'smoker', smoker, @smoker == smoker, class: "next" %>
            <%= smoker.humanize %>
        </label>
          <% end %>
        </div>
      </div>

      <div class="question">
        <div class="answer">
          <label for="Diet" class="quiz-title">Meat consumtion:</label>
          <% [ 'Always','Around 5', '1 to 2 meals per week', 'Never' ].each do |diet| %>
          <label class="option">
            <%= radio_button_tag 'diet', diet, @diet == diet, class: "next" %>
            <%= diet.humanize %>
          </label>
          <% end %>
        </div>
      </div>

      <div class="question">
        <div class="answer">
          <label for="Recicle" class="quiz-title">How often do you recicle?:</label>
          <% [ 'Always', 'Most of the time', 'Sometimes', 'Never' ].each do |recicle| %>
          <label class="option">
            <%= radio_button_tag 'recicle', recicle, @recicle == recicle, class: "last"%>
            <%= recicle.humanize %>
          </label>
          <% end %>
          <br>
          <br>
          <%= submit_tag "Submit", class: "btn btn-primary" %>
        </div>
      </div>
      <!-- form_tag  -->
      <% end %>
      <!-- container div -->
    </div>
  </div>
</div>
