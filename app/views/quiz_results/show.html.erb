<div class="banner-quiz">

  <div class="container quiz_result">
    <h4 id="quiz_result"> Based on our super complicated algorithm,</h4>
    <h4> your score is: <%= @score %> points</h4>
    <% case %>
      <% when @score <= 5  then status = " My friend you are ZERO emissions " %>
        <h4 id="quiz_status"><%= status %></h4>
        <% when @score <= 10 then status = " OMFG YOU are so green " %>
        <h4 id="quiz_status"><%= status %></h4>
        <% when @score <= 30 then status = " You need to work on it... " %>
        <h4 id="quiz_status"><%= status %></h4>
        <% when @score <= 50 then status = " Oh boy... We have work to do... " %>
        <h4 ><%= status %></h4>
    <% end %>
    <%= link_to "Sing up, be green", new_user_registration_path , class: "btn btn-success quiz_singup"  %>
  </div>
</div>
