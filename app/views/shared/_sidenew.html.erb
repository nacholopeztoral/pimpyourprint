<div id="sideNavigation" class="sidenav">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
  <ul>
    <br>
    <% if user_signed_in? %>
      <%= image_tag current_user.avatar_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
      <%= link_to "Daily challenge", my_challenge_path, class: "link-side-bar" %>
      <%= link_to "Dashboard", dashboard_path, class: "link-side-bar" %>
      <%= link_to "Events", new_user_session_path, class: "link-side-bar" %>
      <%= link_to "Carbon Footprint calculator", new_transportation_path, class: "link-side-bar" %>
      <%= link_to "Past challenges", my_challenges_path, class: "link-side-bar" %>
      <%= link_to "Suggest new challenge", new_challenge_path, class: "link-side-bar" %>
      <%= link_to t(".sign_in", default: "Logout"), destroy_user_session_path, method: :delete, class: "link-side-bar" %>
    <%else %>
      <%= link_to "Take the Quiz", quiz_path, class: "link-side-bar" %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "link-side-bar" %>
    <% end %>
  </ul>
</div>

<script>
function openNav() {
  var width = window.innerWidth;

  if (width < 1030) {
    document.getElementById("sideNavigation").style.zIndex = "101";
    document.getElementById("sideNavigation").style.width = "100vw";
    document.getElementById("sideNavigation").style.display = "flex";
    document.getElementById("sideNavigation").style.justifyContent = "center";
    document.getElementById("main").style.marginLeft = "250px";
  }
  else {
    document.getElementById("sideNavigation").style.width = "250px";
    document.getElementById("main").style.marginLeft = "250px"; }
  }

function closeNav() {
    document.getElementById("sideNavigation").style.width = "0";
    document.getElementById("main").style.marginLeft = "0";
}
</script>
